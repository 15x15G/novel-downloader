{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017", "dom"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "Releases",
    "dist"
  ]
}
