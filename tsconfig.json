{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist", "Releases"]
}
