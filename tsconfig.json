{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom", "ESNext.String"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist/",
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "Releases",
    "dist"
  ]
}
